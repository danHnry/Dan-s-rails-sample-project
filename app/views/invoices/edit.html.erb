<h1>Edit Invoice</h1>

<%= render "form", invoice: @invoice %>

<%= form_with model: @invoice do |form| %>
    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
      <% @invoice.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
        <%= form.label :description %><br>
        <%= form.text_field :description %>
        <% @invoice.errors.full_messages_for(:description).each do |message| %>
          <div><%= message %></div>
        <% end %>
    </div>

    <div>
    <%= form.submit %>
    </div>
<% end %>