<!-- invoices.html.erb -->

<style>
  h1 {
    font-size: 2em;
    text-align: center;
    margin-bottom: 1em;
  }

  ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  li {
    margin-bottom: 0.5em;
  }

  a {
    color: #333;
    text-decoration: none;
    border-bottom: 2px solid #333;
  }

  a:hover {
    background-color: #333;
    color: #fff;
  }

  button {
    background-color: #333;
    color: #fff;
    padding: 0.5em 1em;
    border: none;
    border-radius: 0.5em;
    font-size: 1em;
    cursor: pointer;
  }

  button:hover {
    background-color: #444;
  }
</style>

<h1>Invoices</h1>

<ul>
  <% @invoices.each do |invoice| %>
    <li>
      <%= link_to invoice.name, invoice %>
    </li>
  <% end %>
</ul> 

<%= button_to "New Invoice", new_invoice_path, method: :get %>
